<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51C0EA"
    android:longClickable="false"
    android:onClick="substractGlass">

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/glassOfWater"
        android:layout_gravity="center_horizontal"
        android:max="12"
        android:progress="5"
        android:indeterminate="false"
        android:progressDrawable="@drawable/glass_progress"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:id="@+id/numberofglasses"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="600px"
        android:textColor="#ACFF4E" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glasses Left"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/numberofglasses"
        android:layout_centerHorizontal="true"
        android:textSize="50px"
        android:textColor="#2e2e2e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap after drinking a glass"
        android:id="@+id/textView8"
        android:layout_below="@+id/numberofglasses"
        android:layout_marginTop="62dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="#282828" />

</RelativeLayout>